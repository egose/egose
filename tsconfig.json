{
  "compilerOptions": {
    "target": "ES2015",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@egose/acl": ["./packages/acl/src/index"],
      "@egose/acl/*": ["./packages/acl/src/*"],
      "@egose/deco": ["./packages/deco/src/index"],
      "@egose/deco/*": ["./packages/deco/src/*"],
      "@egose/swagger": ["./packages/swagger/src/index"],
      "@egose/swagger/*": ["./packages/swagger/src/*"],
      "@egose/adapter-js": ["./packages/adapter-js/src/index"],
      "@egose/adapter-js/*": ["./packages/adapter-js/src/*"],
      "@egose/react-pagination-hook": ["./packages/react-pagination-hook/src/index"],
      "@egose/react-pagination-hook/*": ["./packages/react-pagination-hook/src/*"],
      "@egose/_common/*": ["./packages/_common/*"],
      "@examples/*": ["./examples/*"]
    }
  }
}
