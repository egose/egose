{
  "compilerOptions": {
    "target": "ES2015",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@egose/acl": ["./packages/acl/src/index"],
      "@egose/acl/*": ["./packages/acl/src/*"],
      "@egose/deco": ["./packages/deco/src/index"],
      "@egose/deco/*": ["./packages/deco/src/*"],
      "@examples/*": ["./examples/*"]
    }
  }
}
