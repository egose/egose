{
  "name": "@egose/adapter-js",
  "version": "0.0.0-PLACEHOLDER",
  "description": "Client adapter connecting to and interacting with @egose/acl API endpoints in javascript",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/egose/egose"
  },
  "homepage": "https://egose.github.io/docs/egose-adapter-js/philosophy/",
  "keywords": [
    "express",
    "mongoose",
    "access control list",
    "api endpoints",
    "adapter"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc -d",
    "bundle": "tsup",
    "lint": "git ls-files '*.js' '*.ts' | xargs yarn eslint",
    "test": "mocha --exit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {},
  "tsup": {
    "target": "node18",
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "spec": [
      "test/**/*.spec.ts"
    ]
  }
}
