{
  "name": "@egose/adapter-js",
  "version": "0.0.0-PLACEHOLDER",
  "description": "Client adapter connecting to and interacting with @egose/acl API endpoints in javascript",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/egose/egose"
  },
  "homepage": "https://egose.github.io/docs/egose-adapter-js/philosophy/",
  "keywords": [
    "express",
    "mongoose",
    "access control list",
    "api endpoints",
    "adapter"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc -d",
    "bundle": "tsup",
    "lint": "git ls-files '*.js' '*.ts' | xargs yarn eslint",
    "test": "mocha --exit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "lodash.assign": "^4.2.0",
    "lodash.castarray": "^4.4.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.mapvalues": "^4.6.0",
    "lodash.noop": "^3.0.1",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "lodash.set": "^4.3.2"
  },
  "peerDependencies": {},
  "tsup": {
    "target": "node18",
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "spec": [
      "test/**/*.spec.ts"
    ]
  },
  "devDependencies": {
    "@types/lodash.assign": "^4.2.9",
    "@types/lodash.castarray": "^4.4.9",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/lodash.get": "^4.4.9",
    "@types/lodash.isempty": "^4.4.9",
    "@types/lodash.isplainobject": "^4.0.9",
    "@types/lodash.mapvalues": "^4.6.9",
    "@types/lodash.noop": "^3.0.9",
    "@types/lodash.omit": "^4.5.9",
    "@types/lodash.pick": "^4.4.9",
    "@types/lodash.set": "^4.3.9"
  }
}
