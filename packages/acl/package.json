{
  "name": "@egose/acl",
  "additionalNames": [
    "egose",
    "express-mongoose-acl",
    "@emacl/core"
  ],
  "version": "0.0.0-PLACEHOLDER",
  "description": "REST API Access control built in Express and Mongoose",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/egose/egose"
  },
  "homepage": "https://egose.github.io/docs/egose-acl/philosophy/",
  "keywords": [
    "express",
    "mongoose",
    "access control list",
    "api endpoints"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc -d",
    "bundle": "tsup",
    "lint": "git ls-files '*.js' '*.ts' | xargs yarn eslint",
    "test": "mocha --exit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express-json-router": "0.7.0",
    "lodash": "^4.17.21",
    "mongoose-schema-jsonschema": "^2.0.2",
    "sift": "^17.0.1",
    "winston": "^3.8.2"
  },
  "peerDependencies": {
    "express": ">=4.6.0",
    "mongoose": ">=5.2.0"
  },
  "devDependencies": {},
  "tsup": {
    "target": "node18",
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "spec": [
      "test/**/*.spec.ts",
      "../_common/test/**/*.spec.ts"
    ]
  }
}
